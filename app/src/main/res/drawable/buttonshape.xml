<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Esquinas redondeadas -->
    <corners android:radius="25dp" />

    <!-- Gradiente azul -->
    <gradient
        android:angle="45"
        android:centerX="70%"
        android:centerColor="#3C8FD2"
        android:startColor="#0765FF"
        android:endColor="#1D9EFF"
        android:type="linear"
        />

    <!-- Borde -->

    <stroke
        android:width="1dp"
        android:color="#fff"
        />


    <!-- Padding interno (opcional) -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />
</shape>