<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/toolbackground"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_logo_club"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:contentDescription="Logo"
        android:padding="4dp" />

    <TextView
        android:id="@+id/nav_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Club Deportivo Argentino"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/nav_header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usuario@ejemplo.com"
        android:textColor="@android:color/white" />
</LinearLayout>
